{
  "compilerOptions": {
    "moduleDetection": "force",
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020", "dom"],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "outDir": "../../target/deploy"
  },
  "include": ["**/*.ts"]
}
